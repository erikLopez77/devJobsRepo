<main class="lista-vacantes">
    <h2> Lista de vacantes</h2>

    {{#if vacantes.length}}
    {{#each vacantes}}
    <div class="vacante">
        <div class="caja">
            <h3>Facebook</h3>
            <p class="puesto">React developer</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Ubicación</p>
            <p class="nombre">Remoto</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Contrato</p>
            <p class="nombre contrato">Tiempo completo</p>
        </div>
        <div class="caja centrar-vertical">
            <a href="#" class="btn btn-verde">Más info</a>
        </div>
    </div>

    {{else}}
    <p>No hay vacantes</p>
    {{/if}}
</main>